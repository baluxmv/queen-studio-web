---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Gallery from '../components/Gallery.astro';
import About from '../components/About.astro';
import Testimonial from '../components/Testimonial.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

import '../styles/global.css';

const config = {
  whatsappNumber: '56961095518',
  instagramHandle: 'queen.studioartnails',
};
---

<Layout title="Queen Studio | Art Nails - Providencia, Antofagasta">
  <Header whatsappNumber={config.whatsappNumber} />
  <Hero whatsappNumber={config.whatsappNumber} />
  <Services />
  <Gallery instagramHandle={config.instagramHandle} />
  <About />
  <Testimonial />
  <Contact whatsappNumber={config.whatsappNumber} instagramHandle={config.instagramHandle} />
  <Footer whatsappNumber={config.whatsappNumber} instagramHandle={config.instagramHandle} />
  <WhatsAppButton whatsappNumber={config.whatsappNumber} />
</Layout>
