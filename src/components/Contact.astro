---
interface Props {
  whatsappNumber?: string;
  instagramHandle?: string;
}

const { whatsappNumber = '56961095518', instagramHandle = 'queen.studioartnails' } = Astro.props;
---

<section class="py-24 md:py-40 bg-cream text-center" id="contacto">
  <div class="container">
    <div class="max-w-[600px] mx-auto">
      <p class="section-tag reveal">Contacto</p>
      <h2 class="text-4xl md:text-5xl mb-4 reveal reveal-delay-1">Reserva tu Experiencia</h2>
      <p class="text-lg text-color-text-light mb-16 reveal reveal-delay-2">
        Agenda tu cita y descubre el arte en tus manos
      </p>

      <a
        href={`https://wa.me/${whatsappNumber}`}
        class="contact-btn inline-flex items-center justify-center gap-4 text-[0.8rem] tracking-[0.15em] uppercase text-white bg-color-black no-underline py-6 px-12 relative overflow-hidden reveal reveal-delay-3"
        target="_blank"
        rel="noopener"
      >
        <svg class="w-5 h-5 relative z-10" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span class="relative z-10">Escribenos por WhatsApp</span>
      </a>

      <div class="flex flex-wrap justify-center gap-16 mt-24 pt-16 border-t border-stone reveal reveal-delay-4">
        <div class="text-center">
          <p class="text-[0.65rem] tracking-[0.2em] uppercase text-warm-gray mb-2">Ubicacion</p>
          <p class="font-serif text-lg text-color-black">Providencia, Antofagasta</p>
        </div>
        <div class="text-center">
          <p class="text-[0.65rem] tracking-[0.2em] uppercase text-warm-gray mb-2">WhatsApp</p>
          <p class="font-serif text-lg text-color-black">
            <a href={`https://wa.me/${whatsappNumber}`} target="_blank" rel="noopener" class="text-inherit no-underline transition-all duration-200 hover:text-gold">
              +56 9 6109 5518
            </a>
          </p>
        </div>
        <div class="text-center">
          <p class="text-[0.65rem] tracking-[0.2em] uppercase text-warm-gray mb-2">Instagram</p>
          <p class="font-serif text-lg text-color-black">
            <a href={`https://www.instagram.com/${instagramHandle}`} target="_blank" rel="noopener" class="text-inherit no-underline transition-all duration-200 hover:text-gold">
              @{instagramHandle}
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-btn::before {
    content: '';
    @apply absolute inset-0 -translate-x-full transition-transform duration-400;
    background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
  }

  .contact-btn:hover::before {
    @apply translate-x-0;
  }
</style>
