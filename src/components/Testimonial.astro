---
interface Props {
  quote?: string;
  author?: string;
}

const {
  quote = 'Cada detalle, cada trazo, cada color... en Queen Studio entienden que las unas son una extension de tu personalidad.',
  author = 'Cliente Satisfecha'
} = Astro.props;
---

<section class="py-24 md:py-40 bg-color-black text-white text-center">
  <div class="container container--narrow">
    <p class="font-serif text-2xl md:text-3xl lg:text-4xl font-light italic leading-relaxed text-cream max-w-[800px] mx-auto mb-8 reveal">
      "{quote}"
    </p>
    <p class="text-xs tracking-[0.2em] uppercase text-gold-light reveal reveal-delay-1">
      - {author}
    </p>
  </div>
</section>
